{
    "name": "auto-attendance-form",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build:fonts": "node scripts/convert-fonts.js",
        "build:css": "tailwindcss -i src/popup.css -o build/popup.css --minify",
        "build:chrome": "bun run build:css && node scripts/build.js chrome",
        "build:firefox": "bun run build:css && node scripts/build.js firefox",
        "build:all": "bun run build:fonts && bun run build:css && node scripts/build.js chrome && node scripts/build.js firefox",
        "clean:build": "node scripts/clean.js",
        "clean:all": "bun run clean:build && rm -rf node_modules bun.lock",
        "sign:firefox": "web-ext sign --source-dir=dist/firefox --artifacts-dir=build/signed",
        "lint": "eslint src/**/*.ts",
        "typecheck": "tsc --noEmit",
        "prebuild": "bun run clean:build"
    },
    "dependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "webextension-polyfill": "^0.10.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.18",
        "ttf2woff2": "^4.0.5",
        "@types/chrome": "^0.1.27",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "esbuild": "^0.19.12",
        "eslint": "9.39.1",
        "fs-extra": "^11.3.2",
        "typescript": "^5.9.3",
        "web-ext": "^7.12.0"
    }
}
