{
    "name": "auto-attendance-form",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "node scripts/build.js chrome",
        "build:chrome": "node scripts/build.js chrome",
        "build:firefox": "node scripts/build.js firefox",
        "build:watch": "node scripts/build.js watch",
        "build:fonts": "node scripts/convert-fonts.js",
        "build:css": "tailwindcss -i src/popup.css -o build/popup.css --minify",
        "build:all": "bun run build:fonts && bun run build:css && bun run build:chrome",
        "package:chrome": "bun run build:chrome && cd dist/chrome && zip -r \"../../build/自動出席フォーム chrome.zip\" .",
        "package:firefox": "bun run build:firefox && web-ext build --source-dir=dist --artifacts-dir=build",
        "lint": "eslint src/**/*.ts",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "webextension-polyfill": "^0.10.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.18",
        "ttf2woff2": "^4.0.3",
        "@types/chrome": "^0.1.22",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.1",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "esbuild": "^0.19.12",
        "eslint": "^8.57.1",
        "fs-extra": "^11.3.2",
        "typescript": "^5.9.3",
        "web-ext": "^7.12.0"
    }
}
